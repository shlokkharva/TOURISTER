<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/packageNameEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Package Name"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:background="@android:drawable/edit_text" />

        <EditText
            android:id="@+id/packageDescEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Package Description"
            android:inputType="textMultiLine"
            android:minLines="4"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:background="@android:drawable/edit_text" />

        <Spinner
            android:id="@+id/seasonSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" />

        <CheckBox
            android:id="@+id/availableCheckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Available"
            android:layout_marginTop="10dp" />

        <Button
            android:id="@+id/uploadImageBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload Image"
            android:layout_marginTop="10dp" />

        <ImageView
            android:id="@+id/previewImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="10dp"
            android:background="#e0e0e0"
            android:contentDescription="Selected Image Preview" />

        <Button
            android:id="@+id/savePackageBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Package"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/teal_700"
            android:textColor="@android:color/white" />

    </LinearLayout>
</ScrollView>
